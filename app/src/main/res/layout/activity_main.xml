<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFE4F4"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/volverBtn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#001CFF"
        android:onClick="onClick"
        android:tint="@color/white"
        android:tintMode="src_atop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textView2"
        style="@style/tituloprincipalTxt"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="#FF0000"
        android:fontFamily="@font/amarante"
        android:text="INICIO"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <Button
        android:id="@+id/materiasBtn"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#FF0000"
        android:fontFamily="@font/amarante"
        android:onClick="onClick"
        android:text="Materias"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/estudiantesBtn"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FF0000"
        android:fontFamily="@font/amarante"
        android:onClick="onClick"
        android:text="Estudiantes"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materiasBtn"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/notasBtn"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FF0000"
        android:fontFamily="@font/amarante"
        android:onClick="onClick"
        android:text="NOTAS"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estudiantesBtn"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>