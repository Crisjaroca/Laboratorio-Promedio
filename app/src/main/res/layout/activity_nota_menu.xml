<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94A7FFEB"
    tools:context=".NotaMenuActivity">

    <TextView
        android:id="@+id/textView12"
        style="@style/tituloprincipalTxt"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="NOTAS" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Estudiante"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/comboEstudiantesNota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/materias"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/nombreInfoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Nota"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/notaEstudianteTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Ingrese Una Nota"
            android:inputType="numberDecimal"
            android:maxLength="3" />

    </LinearLayout>

    <Button
        android:id="@+id/agregarNotaBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="Agregar"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/modificarNotaBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:text="Modificar"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agregarNotaBtn" />

    <Button
        android:id="@+id/eliminarNotaBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:text="Eliminar"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modificarNotaBtn" />

    <Button
        android:id="@+id/listarNotaIndividualBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:text="Informe"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eliminarNotaBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>